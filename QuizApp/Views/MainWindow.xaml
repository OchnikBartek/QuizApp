<Window x:Class="QuizApplication.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quiz Main Menu" Height="450" Width="800">
    <Grid Cursor="">
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Images/tlo.jpg"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <MediaElement Name="BackgroundMusic" 
                  Source="pack://application:,,,/Images/background_music.mp3"
                  LoadedBehavior="Manual"
                  UnloadedBehavior="Stop"
                  Volume="0.5" Cursor="" />
        <MediaElement Name="ClickSound" 
                  Source="pack://application:,,,/Images/button_click_sound.wav"
                  LoadedBehavior="Manual"
                  UnloadedBehavior="Stop"
                  Volume="0.5" />
        <TextBlock 
        Text="Quiz" 
        TextAlignment="Center" 
        VerticalAlignment="Center" 
        Background="Transparent" 
        FontSize="28" 
        Foreground="White" 
        FontWeight="Bold"/>
        <Button x:Name="play" 
        Grid.Row =" 1" 
        Content="Zagraj w Quiz" 
        Width="300" 
        Height="80" 
        Background="Transparent"
        BorderBrush="#b61b23" 
        FontSize="24" 
        Foreground="White" 
        BorderThickness="3"  
        FontWeight="Bold" 
        Cursor="Hand">
            <Button.Effect>
                <DropShadowEffect 
                Color="Red"
                BlurRadius="100" 
                ShadowDepth="0" 
                Opacity="1"/>
            </Button.Effect>
        </Button>
        <Button x:Name="create" 
        Grid.Row="2" 
        Content="UtwÃ³rz Quiz" 
        VerticalAlignment="Top" 
        Width="300" Height="80" 
        Background="Transparent" 
        BorderBrush="#b61b23" 
        FontSize="24" 
        Foreground="White" 
        BorderThickness="3" 
        FontWeight="Bold"
        Cursor="Hand">
            <Button.Effect>
                <DropShadowEffect 
                Color="Red" 
                BlurRadius="100" 
                ShadowDepth="0" 
                Opacity="1"/>
            </Button.Effect>
        </Button>
        <Button x:Name="leaderboard"
         Grid.Row="2" 
         VerticalAlignment="Bottom" 
         HorizontalAlignment="Left" 
         Width="80" 
         Height="60"  
         Background="Transparent" 
         BorderBrush="Transparent" 
         FontSize="24" 
         Foreground="White" 
         FontWeight="Bold"
         Cursor="Hand">
            <Button.Effect>
                <DropShadowEffect 
                Color="Red" 
                BlurRadius="100" 
                ShadowDepth="0" 
                Opacity="1"/>
            </Button.Effect>
            <Image Source="pack://application:,,,/Images/ikona.png" Stretch="Uniform"/>

        </Button>
        <Button x:Name="gear"
         Grid.Row="2" 
         VerticalAlignment="Bottom" 
         HorizontalAlignment="Left" 
         Width="80" 
         Height="60"  
         Background="Transparent" 
         BorderBrush="Transparent" 
         FontSize="24" 
         Foreground="White" 
         FontWeight="Bold"
         Cursor="Hand"
         Margin="80,0,0,0">
            <Button.Effect>
                <DropShadowEffect 
                Color="Red" 
                BlurRadius="100" 
                ShadowDepth="0" 
                Opacity="1"/>
            </Button.Effect>
            <Image Source="pack://application:,,,/Images/gear.png" Stretch="Uniform"/>

        </Button>
    </Grid>
</Window>
